
{{> nav}}
<main id="HomeMain">
          <div class="background-image responsive"></div>
               <div class="jumbotron">
                    <h1>Find and Rate a Roommate!</h1>
                    <h2>Never have a bad roommate experience again.</h2>
              </div>

              <div class="row">
                <div class="col-4">
                  {{> profileSidebar}}
               </div>
              </div>
                   <section class="row">
                      {{#each users}}
                      <div class="col-sm-12 col-md-4 col-lg-3">
                          <div class="card w-100">
                              <a href="users/{{id}}">
                                  <img class="card-img-top" src="{{picture}}" alt="{{name}}'s picture">
                              </a>
                              <div class="card-body">
                                  <h4 class="card-title">{{name}}</h4>
                                  <p class="card-text">{{age}}</p>
                                  <p class="card-text">{{location}}</p>
                                  <a href="users/{{id}}" class="btn btn-primary">View Profile</a>
                              </div>
                          </div>
                      </div>
                      {{/each}}
                   </section>
</main>
